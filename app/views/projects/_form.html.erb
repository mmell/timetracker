<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :parent_id %> (<%= @project.parent_name %>)<br />
    <%= select_tag "project[parent_id]",
			'<option value="">None</option>'.html_safe + projects_select(Project.active, @project.parent, @project.id)
			%>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :description, "Project Description" %><br />
    <%= f.text_area( :description, {:size => '64x9'} ) %>
  </div>
  <div class="field">
    <%= f.label :archived %><br />
    <%= f.check_box :archived %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script>
	$('#project_name').focus();
</script>
