<p><strong>
<%= link_to(@current_activity.person.name, @current_activity.person) %>
working on
<%= link_to_projects @current_activity.project %> <%= link_to_project_url(@current_activity.project) %>
</strong></p>

<%= form_for(@current_activity) do |f| %>
  <% if @current_activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@current_activity.errors.count, "error") %> prohibited this current_activity from being saved:</h2>

      <ul>
      <% @current_activity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :project_id %> (<%= link_to('Edit', edit_project_path(@current_activity.project) )%>)<br />
    <%= select_tag "current_activity[project_id]", projects_select(Project.active, @current_activity.project_id) %>FIXME only show users' projects
  </div>
  <div class="field">
    <%= f.label :started %><br />
    <%= f.datetime_select :started %>
  </div>
  <div class="field">
    <%= f.label :description, "Description" %><br />
    <%= f.text_field :description, :size => 90 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script>
	$('#current_activity_description').focus();
</script>
