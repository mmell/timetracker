<p>
  <b>Person:</b>
  <%= @current_activity.person.name %>
</p>

<p>
  <b>Client:</b>
  <%= link_to(@current_activity.task.objective.project.client.name, @current_activity.task.objective.project.client) %>
</p>

<p>
  <b>Project:</b>
  <%= link_to(@current_activity.task.objective.project.name, @current_activity.task.objective.project) %>
</p>

<p>
  <b>Objective:</b>
  <%= link_to(@current_activity.task.objective.name, @current_activity.task.objective) %>
<br />
  <%= @current_activity.task.objective.description %>
</p>

<%= form_for(@current_activity) do |f| %>
  <% if @current_activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@current_activity.errors.count, "error") %> prohibited this current_activity from being saved:</h2>

      <ul>
      <% @current_activity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :task_id %> (<%= link_to('Edit', [@current_activity.task.objective, @current_activity.task])%>)<br />
    <%= select_tag "current_activity[task_id]", 
			options_from_collection_for_select(get_user.tasks.active, "id", "fullname", @current_activity.task_id) 
		%>
  </div>
  <div class="field">
    <%= f.label :started %><br />
    <%= f.datetime_select :started %>
  </div>
  <div class="field">
    <%= f.label :minutes %><br />
    <%= @current_activity.minutes %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area_local :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
