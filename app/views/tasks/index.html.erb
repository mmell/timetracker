<h1>Listing tasks for <%= @objective.name %></h1>

<table>
  <tr>
    <th>Task</th>
    <th>Minutes</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr valign='top' class='row<%= cycle(1, 2) %>'>
    <td><%= link_to task.name, [@objective, task] %></td>
    <td align='right'><%= task.minutes %></td>
    <td><%= task.description %></td>
    <td><%= button_to('Start', start_objective_task_path(@objective, task)) %></td>
    <td><%= link_to 'Edit', edit_objective_task_path(@objective, task) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_objective_task_path(@objective) %>
