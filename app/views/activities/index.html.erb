<% if get_user.current_activity %>
<div class='content'>
<h3>Current Activity</h3>
<table>
  <tr>
    <th>Objective</th>
    <th>Task</th>
    <th>Started</th>
    <th>Minutes</th>
    <th></th>
  </tr>
	<tr valign='top' class='row1'>
		<td>
			<%= link_to(get_user.current_activity.task.objective.project.fullname, get_user.current_activity.task.objective.project) %>
				<br />
				<%= link_to(get_user.current_activity.task.objective.name, [get_user.current_activity.task.objective.project, get_user.current_activity.task.objective]) %>
			</td>
		<td><%= link_to(get_user.current_activity.task.name, [get_user.current_activity.task.objective, get_user.current_activity.task]) %></td>
		<td><%= get_user.current_activity.started.localtime %></td>
		<td align='right'><%= get_user.current_activity.minutes %></td>
		<td><%= link_to 'Cancel', cancel_current_activity_path(get_user.current_activity), :confirm => 'Are you sure you want to Cancel?', :method => :post %></td>
		<td><%= link_to 'Restart', restart_current_activity_path(get_user.current_activity), :confirm => 'Are you sure Restart the timer?', :method => :post %></td>
		<td><%= link_to 'Edit', edit_current_activity_path(get_user.current_activity) %></td>
	</tr>
	<tr valign='top' class='row1'>
		<td class='rowblank'></td>
		<td colspan='6'><%= get_user.current_activity.description %></td>
	</tr>
</table>
</div>
<% end %>

<div style='overflow: hidden; width: 100%;'>
	<h3 style='float: right; width: 45%;'>Time Now: <%= user_time_now %></h3>
	<h3 style='float: left; width: 55%;'>Recorded Hours: <%= (@minutes_today / 60.0).round_to_two %></h3>
</div>

<h1>Activities Today for <%= get_user.name %></h1>

<%= render :partial => 'activities/list' %>
